<Window x:Class="WatcHive.View.DetalleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatcHive.View"
        mc:Ignorable="d"
        Title="DetalleWindow" Height="450" Width="925"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#FFF9F9F9" CornerRadius="30" Style="{StaticResource GradientBorderStyle}" Margin="0,0,0,0">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Imagen del contenido -->
            <Border Grid.Column="0" Margin="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
                <Image x:Name="imgPoster"
                       Width="300"
                       Height="450"
                       Stretch="UniformToFill"
                       Margin="10"/>
            </Border>

            <!-- Detalles del contenido -->
            <Grid Grid.Column="1" Margin="30,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btnCerrar"
                        Style="{StaticResource CloseButtonStyle}"
                        Content="X"
                        Click="btnCerrar_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,0,0,5"/>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                    <TextBlock x:Name="txtTitulo"
                               FontSize="30"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtGeneros"
                               FontSize="14"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="220">
                        <TextBlock x:Name="txtDescripcion"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                    </ScrollViewer>
                </StackPanel>

                <!-- Botones abajo -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Content="Voy a verla"
                            Width="120"
                            Margin="0,0,10,0"
                            Padding="10"
                            Style="{StaticResource LoginButtonStyle}"
                            Background="#1D1854"
                            Cursor="Hand" Click="Button_Click"/>

                    <Button Content="Agregar a vistos"
                            Width="150"
                            Margin="0,0,10,0"
                            Style="{StaticResource LoginButtonStyle}"
                            Cursor="Hand"/>

                    <Button Content="Agregar a pendientes"
                            Width="200"
                            Padding="10"
                            Style="{StaticResource LoginButtonStyle}"
                            Cursor="Hand" Click="Button_Click"/>

                    
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

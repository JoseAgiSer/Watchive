<UserControl x:Class="WatcHive.View.RecomendacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatcHive.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="#F2F2F2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="50,20,0,20" VerticalAlignment="Top">
            <TextBlock Text="Emoción: " Margin="0,0,5,0" Style="{StaticResource FormLabelStyle}" VerticalAlignment="Center"/>
            <ComboBox x:Name="comboEmociones" Width="150" VerticalAlignment="Center">
                <ComboBoxItem Content="Feliz"/>
                <ComboBoxItem Content="Triste"/>
                <ComboBoxItem Content="Ansioso"/>
                <ComboBoxItem Content="Motivado"/>
                <ComboBoxItem Content="Aburrido"/>
                <ComboBoxItem Content="Enojado"/>
                <ComboBoxItem Content="Relajado"/>
            </ComboBox>

            <CheckBox x:Name="checkPeliculas" Content="Películas" IsChecked="True" VerticalAlignment="Center" Margin="20,0,5,0"
                                       FontWeight="Bold" FontFamily="Montserrat"/>
            <CheckBox x:Name="checkSeries" Content="Series" IsChecked="True" VerticalAlignment="Center" Margin="20,0,5,0"
                                       FontWeight="Bold" FontFamily="Montserrat"/>

            <Button Content="Recomendar"
                    Style="{StaticResource LoginButtonStyle}"
                    Padding="10,5"
                    Margin="30,0"
                    Click="BtnRecomendar_Click"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled" Margin="0,20,0,0">
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock Text="Hoy te recomendamos..." FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <WrapPanel x:Name="wrapRecomendaciones"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
